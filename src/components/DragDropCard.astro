---
import cloudLogo from "../assets/cloud_upload_24dp_E8EAED_FILL0_wght400_GRAD0_opsz24.svg";
---

<div class="dragDropCard">
  <div class="uploadArea">
    <img src={cloudLogo.src} width="115" height="48" alt="Astro Homepage" />
    <p>Drag & Drop files here</p>
    <button>browse files</button>
  </div>
</div>

<style>
  .dragDropCard {
    display: none;
  }

  .uploadArea {
    border: 4px dashed #ffffff94;
    border-radius: var(--border-radius1);
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    background-color: #ffffff3d;
  }

  p {
    color: var(--white1);
    width: 12rem;
    text-align: center;
    font-size: 1.5rem;
  }

  button {
    border-radius: 15px;
    padding: 0.5rem;
    width: 10rem;
    font-size: 1.3rem;
    position: relative;
  }

  @media (min-width: 800px) {
    .dragDropCard {
      display: block;
      background: var(--dark-blue2);
      border-radius: var(--border-radius1);
      max-width: var(--card-max-width);
      width: var(--card-width-desktop);
      height: var(--card-height-desktop);

      justify-self: center;
      padding: 3rem 3rem;
    }
  }
</style>
