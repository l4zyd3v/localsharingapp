---
import cloudLogo from "../assets/cloud_upload_24dp_E8EAED_FILL0_wght400_GRAD0_opsz24.svg";
---

<div class="dragDropCard">
  <form class="uploadArea">
    <img src={cloudLogo.src} width="115" height="48" alt="Astro Homepage" />
    <p>Drag & Drop files here</p>
    <input type="file" class="fileInput" />
    <button class="dummyBtn">Browse Files</button>
  </form>
</div>

<style>
  .dragDropCard {
    display: none;
  }

  .uploadArea {
    border: 4px dashed #ffffff94;
    border-radius: var(--border-radius1);
    background-color: #ffffff3d;

    height: 100%;
    width: 100%;
    display: grid;
    grid-template-rows: 1fr 1fr 1fr;
    justify-items: center;
    align-items: center;
    position: relative;
  }

  p {
    color: var(--white1);
    width: 12rem;
    text-align: center;
    font-size: 1.5rem;
  }

  .fileInput {
    border: 2px solid red;
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
  }

  .dummyBtn {
    border-radius: 15px;
    padding: 0.5rem;
    width: 10rem;
    font-size: 1.3rem;
    position: relative;
  }

  @media (min-width: 800px) {
    .dragDropCard {
      display: block;
      background: var(--dark-blue2);
      border-radius: var(--border-radius1);
      max-width: var(--card-max-width);
      width: var(--card-width-desktop);
      height: var(--card-height-desktop);

      justify-self: center;
      padding: 3rem 3rem;
    }
  }
</style>

<script>
  import { setFiles } from "../scripts/store.ts";

  document.addEventListener("DOMContentLoaded", () => {
    const fileInput = document.querySelector(".fileInput");

    fileInput &&
      fileInput.addEventListener("change", (e) => {
        const target = e.target as HTMLInputElement;
        const files = target?.files;
        if (files) {
          setFiles(Array.from(files));
        }
      });
  });
</script>
