---
import { data } from "../scripts/seed.ts";
const { cardType } = Astro.props;
---

<div class={"card"}>
  <ul>
    {
    cardType === "upload" ? (
      data.map((file: any, idx: number) => (
        <li>
          <label>
            <input id={file.name + idx} type="checkbox" class="checkbox" />
        <span class="secondSpan">
          <!-- {file.name} -->
        </span>
          </label>
        </li>
      ))
    ) : null
    }
  </ul>

  <div class="buttonWrapper">
    <button class="clearbutton">clear</button>
    <!-- { -->
    <!-- cardType === "download" ? ( -->
    <!-- <button class="">QR/Link</button> -->
    <!-- ) : null -->
    <!-- } -->
    <button class="uploadButton">upload</button>
  </div>
</div>

<style>
  :root {
m   --card-height: 13rem;
  }

  .card {
    background: var(--dark-blue2);
    border-radius: var(--border-radius1);
    width: 90%;
    max-width: 25rem;
    height: var(--card-height);
 
    justify-self: center;
    display: grid;
    grid-template-rows: 3fr 1fr;
    padding: 1rem 1.1rem;
  }

  ul {
    display: grid;
    grid-template-columns: 1fr 1fr;
    overflow-y: auto;
    /* border: 1px solid blue; */
    gap: 0.8rem;
  }

  li {
    height: 100%;
  }

  label {
    display: flex;
    height: 1.4rem;
  }

  .checkbox {
    appearance: none;
    width: 1rem;
    height: 1rem;
    background-color: none;
    border: 2px solid white;
    align-self: center;
  }
  .checkbox:checked {
    background-color: var(--green1);
  }

  .secondSpan {
    display: flex;
    align-items: center;
    margin-left: 7px;
    width: 100%;
    border-radius: var(--border-radius1);
    background-color: var(--white1);
  }

  .buttonWrapper {
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    padding: 0 0.5rem;
  }

  button {
    border: none;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    font-size: 1.2rem;
    border-radius: var(--border-radius1);
    height: 1.8rem;
    position: relative;
    top: 1rem;
  }

  .clearbutton {
    width: 5rem;
    background: var(--red1);
  }

  .uploadButton {
    background: var(--green1);
  }

@media (min-width: 800px) {

}
</style>
