<script>
  document.addEventListener("DOMContentLoaded", () => {
    const nav = document.querySelector(".burgerNav") as HTMLElement;
    const translucentOverlay = document.querySelector(
      ".translucentOverlay",
    ) as HTMLElement;
    const burgerButton = document.querySelector(".burgerBtn") as HTMLElement;

    document.addEventListener("burgerToggle", (event) => {
      const { isActive } = (event as CustomEvent).detail;

      if (!nav) return;

      if (isActive) {
        nav.classList.add("active");
        translucentOverlay.classList.add("active");
      } else {
        nav.classList.remove("active");
        translucentOverlay.classList.remove("active");
      }
    });

    translucentOverlay.addEventListener("click", () => {
      nav.classList.remove("active");
      translucentOverlay.classList.remove("active");
      burgerButton.classList.remove("active");
    });
  });
</script>

<nav class="burgerNav">
  <ul>
    <li><a href="/">home</a></li>
    <li><a href="#">menu2</a></li>
    <li><a href="#">menu3</a></li>
    <li><a href="#">menu4</a></li>
  </ul>
</nav>

<div class="translucentOverlay"></div>

<style>
  .burgerNav {
    position: absolute;
    background: white;
    justify-self: center;
    top: 100%;
    right: 2rem;
    width: 70%;
    height: 23rem;
    border-radius: var(--border-radius1);
    padding: 2rem;
    transition: all 0.5s ease;
    opacity: 0;
    z-index: -1;
  }

  ul {
    height: 100%;
    display: grid;
    grid-template-rows: repeat(4, 1fr);
    justify-items: center;
    align-items: center;
    font-size: 2rem;
  }

  a {
    color: black;
  }

  .burgerNav.active {
    z-index: 100;
    opacity: 1;
  }
  .translucentOverlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: all 0.6s ease;
    z-index: -1;
  }

  .translucentOverlay.active {
    background: rgba(0, 0, 0, 0.9);
    z-index: 99;
  }
</style>
